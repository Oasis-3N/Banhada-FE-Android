<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fresh_page_back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_btn"
            android:layout_marginStart="15dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/category_page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="신선식품"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="#000000"
                android:textSize="22sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/search_btn" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"
            app:srcCompat="@drawable/alram_btn" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#80737373" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#80737373" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/vegetable_btn_view"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

            <ImageView
                android:id="@+id/vegetable_btn_imageview"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/category_vegetable" />

            <TextView
                android:id="@+id/vegetable_btn_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:text="야채/채소류"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fruit_btn_view"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

            <ImageView
                android:id="@+id/fruit_btn_imageview"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/category_fruit" />

            <TextView
                android:id="@+id/fruit_btn_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:text="과일"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/daily_btn_view"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

            <ImageView
                android:id="@+id/daily_btn_imageview"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/category_daily" />

            <TextView
                android:id="@+id/daily_btn_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:text="유제품"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/processed_btn_view"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

            <ImageView
                android:id="@+id/processed_btn_imageview"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/category_processed" />

            <TextView
                android:id="@+id/processed_btn_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:text="가공식품"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sidemenu_btn_view"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

            <ImageView
                android:id="@+id/sidemenu_btn_imageview"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/category_sidemenu" />

            <TextView
                android:id="@+id/sidemenu_btn_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:text="반찬"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#80737373" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7">

        <GridView
            android:id="@+id/category_page_article_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:numColumns="2">


        </GridView>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#80737373" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bottom_bar_home_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/home_btn_unactive" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosansrk_regular"
                android:includeFontPadding="false"
                android:text="홈"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottom_bar_banhada_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/banhada_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosansrk_regular"
                android:text="반하다"
                android:includeFontPadding="false"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottom_bar_communication_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/communication_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosansrk_regular"
                android:text="소통"
                android:includeFontPadding="false"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottom_bar_mybanhada_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/mybanham_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosansrk_regular"
                android:text="마이반함"
                android:includeFontPadding="false"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>